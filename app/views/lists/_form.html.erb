<%= form_for @list do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label "Minimum number of albums" %>
  <%= f.number_field :minimum %>

  <%= f.label "Maximum number of albums" %>
  <%= f.number_field :maximum %>

  <%= f.label "Guidelines" %><br />
  <%= f.text_area(:notes, cols: 65, rows: 10) %>

  <%= f.submit %>

<% end %>
